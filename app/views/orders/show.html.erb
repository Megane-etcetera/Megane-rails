<div class="order_show_base">
    注文日時<br><%= @order.created_at.strftime('%Y年%m月%d日 %H:%M') %>
    <br>
    送付先<br><%= @order.address %>
    <table>
            <tr>
                <th>発送状況</th>
                <th>商品名</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        <% @orderproducts.each do |thing| %>
            <tr>
                <td><%= thing.status %></td>
                <td><%= thing.product.product_title %></td>
                <td><%= thing.quantity %> 枚</td>
                <td><%= thing.order_product_price*thing.quantity %> 円</td>
            </tr>
        <% end %>
            <tr>
                <td></td>
                <td>送料</td>
                <td></td>
                <td><%= @order.delivery_price %>円</td>
            </tr>
            <tr>
                <td></td>
                <td>手数料</td>
                <td></td>
                <td><%= @order.payment_price %>円</td>
            </tr>
            <tr>
                <td></td>
                <td>消費税</td>
                <td></td>
                <td><%= @order.tax %>円</td>
            </tr>
            <tr class="order_total_price_tr">
                <td></td>
                <td>総計</td>
                <td></td>
                <td><%= @order.order_price %>円</td>
            </tr>
    </table>
</div>